<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Системные цвета и акценты с fallback -->
    <SolidColorBrush x:Key="SystemAccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="SystemAccentLightBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="SystemAccentDarkBrush" Color="#005A9E"/>
    
    <!-- Основные цвета интерфейса -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#F9F9F9"/>
    <SolidColorBrush x:Key="CardBrush" Color="White"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    
    <!-- Цвета текста -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#323130"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="#999999"/>
    
    <!-- Статусные цвета -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#E8F5E8"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="ErrorLightBrush" Color="#FFEBEE"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="#FFF3E0"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="#E3F2FD"/>
    
    <!-- Интерактивные цвета -->
    <SolidColorBrush x:Key="HoverBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="{x:Static SystemColors.HighlightColor}"/>
    <SolidColorBrush x:Key="FocusBrush" Color="{x:Static SystemColors.AccentColor}"/>
    
</ResourceDictionary>